        </StackPanel>
        <ScrollViewer ZoomMode="Enabled" Background="DarkGray" Grid.Column="1">
            <ItemsControl ItemsSource="{Binding PdfPages, ElementName=root}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
