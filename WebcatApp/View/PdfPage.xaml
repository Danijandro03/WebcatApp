<Page
    x:Class="WebcatApp.View.PdfPage"
    xmlns: Model ="using:WebcatApp.Model"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=PdfPage}"
    x:Name="root">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <AppBarButton x:Name="CustomButton" Content="Download file" Command="{Binding ReturnText}"/>
        </StackPanel>
        <ScrollViewer ZoomMode="Enabled" Background="DarkGray" Grid.Column="1">
            <ItemsControl ItemsSource="Model.PdfPages, ElementName=root}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="Model:PdfPages">
                        <Image Source="{Binding PdfPages}" Margin="0 2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel ItemsSource ="{Binding}">
            <Button Content="Architecting Mobile Apps" Command="{x:Bind ReturnText}"/>
        </StackPanel>
    </Grid>-->
</Page>
